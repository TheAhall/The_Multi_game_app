#colormatch..kv
<ColorGame>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'background_2.jpg'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, 0.1)
            height: 50
            padding: 5

            Label:
                id: title_label
                text: 'Color Match Challenge'
                font_size: 32
                bold: True
                size_hint: (1, 0.3)

        BoxLayout:
            orientation: 'horizontal'
            padding: 5
            spacing: 10
            size_hint: (1, 0.1)
            pos_hint: {'center_x': 0.5}

            Label:
                text: "Time left: " + str(root.time_left)
                font_size: 15
                size_hint: (1, 0.1)

            Label:
                text: "Current Color: " + root.current_color
                font_size: 25
                size_hint: (1, 0.1)
                bold: True

            Label:
                text: "Score: " + str(root.score)
                font_size: 15
                size_hint: (1, 0.1)
            
            Label:
                id: highest_score
                text: ''
                font_size: 15
                size_hint: (1, 0.1)

        BoxLayout:
            orientation: 'vertical'
            padding: 5
            spacing: 5
            size_hint: (0.5, 0.6)
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            GridLayout:
                id: color_grid
                cols: 3
                spacing: 10
                size_hint: (1, 1)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint: (0.6, 0.1)
            pos_hint: {'center_x': 0.5}

            Button:
                text: "Start"
                font_size: 20
                background_color: 0.2, 0.8, 0.2, 1
                color: 1, 1, 1, 1
                on_release: root.start_game()

            Button:
                text: "Quit"
                font_size: 20
                background_color: 0.8, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                on_release: root.quit_game()


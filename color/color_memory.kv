#color_memory.kv
<ColorMemoryGame>:
    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'background_2.jpg'
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 50
            padding: 5

            Label:
                id: title_label
                text: 'Color Memory Game'
                font_size: 32
                size_hint: (1, 1)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            spacing: 5

            Label:
                id: score_label
                text: 'Score: 0'
                font_size: 20
                size_hint: (1, 1)

            Label:
                id: highest_score_label
                text: ''
                font_size: 20
                size_hint: (1, 1)

        BoxLayout:
            orientation: 'vertical'
            padding: 5
            spacing: 10
            size_hint: (0.5, 0.6)
            pos_hint: {'center_x': 0.5}
            canvas.before:
                Color:
                    rgba: 0.2, 0.2, 0.2, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            GridLayout:
                id: grid_layout
                cols: 3
                spacing: 5
                size_hint: (1, 1)

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint: (0.6, 0.1)
            pos_hint: {'center_x': 0.5}

            Button:
                text: 'Play/Reset'
                font_size: 20
                background_color: 0.2, 0.8, 0.2, 1
                color: 1, 1, 1, 1
                on_release: root.start_game()

            Button:
                text: 'quit'
                font_size: 20
                background_color: .8, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                on_release: root.go_to_main_menu()
